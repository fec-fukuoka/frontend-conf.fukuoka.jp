---
import { site } from '../../data/site';

export interface Props {
  title?: string;
  description?: string;
  lang?: 'ja' | 'en';
  ogImage?: string;
}

const {
  title = site.title,
  description = site.description,
  lang = 'ja',
  ogImage = `${site.url}/og-image.png`,
} = Astro.props;

const pageTitle = title === site.title ? title : `${title} | ${site.title}`;
const canonicalURL = new URL(Astro.url.pathname, site.url);
canonicalURL.searchParams.set('hl', lang);

// Alternate language URLs
const jaUrl = new URL(Astro.url.pathname, site.url);
jaUrl.searchParams.set('hl', 'ja');
const enUrl = new URL(Astro.url.pathname, site.url);
enUrl.searchParams.set('hl', 'en');
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Language alternates -->
<link rel="alternate" hreflang="ja" href={jaUrl} />
<link rel="alternate" hreflang="en" href={enUrl} />
<link rel="alternate" hreflang="x-default" href={jaUrl} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={site.title} />
<meta property="og:locale" content={lang === 'ja' ? 'ja_JP' : 'en_US'} />
<meta
  property="og:locale:alternate"
  content={lang === 'ja' ? 'en_US' : 'ja_JP'}
/>

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@frontend_fuk" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Bayon&family=Zen+Kaku+Gothic+New&display=swap"
  rel="stylesheet"
/>

<title>{pageTitle}</title>
